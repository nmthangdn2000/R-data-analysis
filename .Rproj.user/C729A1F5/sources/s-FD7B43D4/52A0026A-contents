library(stringr)
d1 <- read.csv("D:/dataset/test.csv", sep=",")
d2 <- read.csv("D:/dataset/train.csv", sep=",")


data <- d1$Name # lay name tu du lieu d1

hold <- data.frame(FullName=character(),Vocative=character()) # tao dataframe rong

for(i in 1:418){ #Cho vong lap chay 418 lan = voi chieu dai cua data
  # Vi cac tu dung de xung ho toan dung sau dau phay"," va dung truoc ky tu trang
  tam <- strsplit(data[i],",") # Tach chuoi boi dau phay ","
  tam[[1]][2] <- trimws(tam[[1]][2]) # :tam[[1]][2] la doan chuoi ta can, vi du: Kelly, Mr. James ->  Mr. James. 
                                     # Sau do thi em su dung ham trimws de xoa ky tu trang o dau chuoi va cuoi chuoi
  tam <- strsplit(tam[[1]][2]," ")   # tiep den thi em tach chuoi boi ky tu trang, vi du: Mr. James -> Mr.
  voc <- str_sub(tam[[1]][1],1,nchar(tam[[1]][1])-1) # tiep den em su dung ham str_sub de loai ky tu thua` la` dau cham ".": Mr. -> Mr
  hold[i,] <- c(data[i],voc)         # roi em gan du lieu la ten nguyen goc va tu de xung ho vao dataframe hold.
}

View(hold)






